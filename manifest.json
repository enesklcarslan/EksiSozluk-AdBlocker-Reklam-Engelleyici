{
  "manifest_version": 2,

  "name": "Ekşi Sözlük AdBlocker",
  "version": "0.1.0",
  "description": "Ekşi sözlükte gezinirken karşınıza çıkan reklamları kaldıran Chrome eklentisi.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "enable/disable"
  },
  "content_scripts": [{
    "css": ["style.css"],
    "matches": ["https://eksisozluk.com/*"]
  }]

}